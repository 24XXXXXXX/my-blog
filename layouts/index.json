{{- $items := slice -}}
{{- range .Site.RegularPages -}}
  {{- $items = $items | append (dict
    "objectID" .Permalink
    "title" .Title
    "permalink" .Permalink
    "content" (.Plain | truncate 2000)
    "date" (.Date.Format "2006-01-02T15:04:05Z07:00")
    "tags" (.Params.tags | default (slice))
    "categories" (.Params.categories | default (slice))
  ) -}}
{{- end -}}
{{- $items | jsonify -}}
